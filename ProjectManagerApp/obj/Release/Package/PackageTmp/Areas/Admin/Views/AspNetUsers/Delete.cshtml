@model ProjectManagerApp.Areas.Admin.Models.AspNetUser
@using ProjectManagerApp.Areas.Admin.DAL
@{
    ViewBag.Title = "Delete";
}

<h2>User Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>AspNetUser</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

  
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber2)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber2)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            @if (Model.IsActive == true)
            {
                @("True")
            }
            else
            {
                @("False")
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>

        <dd>
            @if (Model.IsDeleted == true)
            {
                @("True")
            }
            else
            {
                @("False")
            }
        </dd>

        <dt>
            <span>Roles</span>
        </dt>
        <dd>
            @if ((ViewBag.UserRoles as List<NameValuePair>).Count > 0)
            {
                foreach (var item in ViewBag.UserRoles as List<NameValuePair>)
                {
                    if (item.IsSelected == true)
                    {
                        <ul>
                            <li>@item.Name</li>
                        </ul>

                    }
                }


            }

        </dd>

        <dt>
            @Html.DisplayName("Projects Name")
        </dt>

        <dd>


            @if ((ViewBag.ProjectsDeveloper as List<NameValuePair>).Count > 0)
            {


                foreach (var item in ViewBag.ProjectsDeveloper as List<NameValuePair>)
                {

                    if (item.IsSelected == true)
                    {
                        <ul>
                            <li>
                                <span>@item.Name</span><br />
                            </li>
                        </ul>
                    }
                }

            }

        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
